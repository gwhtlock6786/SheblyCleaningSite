<%- include("../partials/header") %>

<div class="container">
    <div class="row text-center">
        
        <div class="myform">
            <h1>Edit Reveiw</h1>
            <div id="form">

                <form action="/products/<%= product_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">

                    <div class="form-group">
                        <label for="reviewForm">Enter Review</label>
                        <input class="form-control" type="text" name="review[content]" id="commentForm" value="<%= review.content %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-warning">Submit!</button>
                    </div>
                </form>
                <a href="/products/<%= product_id %>">Go Back!</a>
            </div>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>