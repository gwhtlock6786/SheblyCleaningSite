<%- include("../partials/header") %>

<div class="container">
    <div class="row text-center">
    
        <div class="myform">
            <h1>Add New Review to <%= product.name %></h1>
            <div id="form">
    
                <form action="/products/<%= product._id %>/reviews" method="POST">
    
                    <div class="form-group">
                        <label for="reviewForm">Enter Review</label>
                        <input class="form-control" type="text" name="review[content]" id="commentForm" placeholder="review">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-warning">Submit!</button>
                    </div>
                </form>
                <a href="/products/<%= product._id %>">Go Back!</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>