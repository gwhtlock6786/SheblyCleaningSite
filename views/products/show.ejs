<%- include("../partials/header") %>

<div class="container">
        
        <div class="container">
            <div class="jumbotron">
                <h1>Shelbys Cleaning Emporium</h1>
                <h3><%= product.title %></h3>
            </div>
        </div>

        <hr/>

        <div class="container">
            <img src="<%= product.image %>" alt="" width="500", height="500">
            <p><%= product.description %></p>
            <p><%= product.price %>/Bottle</p>

            <a href="#" class="btn btn-primary">Add to Order</a>
            <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit</a>
            <form class="delete-form" action="/products/<%= product._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>

</div>

<%- include("../partials/footer") %>