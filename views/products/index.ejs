
      <%- include("../partials/header") %>

        <div class="container">
          <div class="jumbotron">
            <h1>Shelbys Cleaning Emporium</h1>
            <h3>Products</h3>
          </div>

          <hr/>



          <div class="row">

            <% products.forEach(function(product){ %>

              <div class="col-lg-4 col-md-6 col-sm-12">
                <div class="card mx-auto my-5" style="width: 18rem;">
                  <div class="card-header"> <h5 class="card-title"><%= product.title %></h5></div>
                    <img src="<%= product.image %>" class="card-img-top" alt="..." height="200" width="200">
                  <div class="card-body">
                    <a href="/products/<%= product.id %>" class="btn btn-primary">Details</a> <a href="#" class="btn btn-primary">Add to Order</a>
                  </div>
                </div>
              </div>


            <% }) %>


          </div>

        </div>
        
<%- include("../partials/footer") %>