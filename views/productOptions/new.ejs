<%- include("../partials/header") %>

<div class="container">
    <div class="row text-center">
    
        <div class="myform">
            <h1>Add New Product Option to <%= product.name %></h1>
            <div id="form">
    
                <form action="/products/<%= product._id %>/options" method="POST">
    
                    <div class="form-group">
                        <label for="sizeForm">Enter Size of New Product Option</label>
                        <input class="form-control" type="number" name="option[size]" id="sizeForm" placeholder="size" min="1" step="0.5">
                    </div>

                    <div class="form-group">
                        <label for="containerForm">Select Container Type</label>
                        <!-- <input class="form-control" type="text" name="option[container]" id="containerForm" placeholder="container"> -->
                        <select name="option[container]" id="containerForm">
                            <option value="glass">Glass</option>
                            <option value="plastic">Plastic</option>
                        </select>
                    </div>
                   
                    <div class="form-group">
                        <label for="priceForm">Enter Price of New Product Option</label>
                        <input class="form-control" type="number" name="option[price]" id="priceForm" placeholder="price" min="0.01" step="0.01">
                    </div>
                    
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-warning">Submit!</button>
                    </div>
                </form>
                <a href="/products/<%= product._id %>">Go Back!</a>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>